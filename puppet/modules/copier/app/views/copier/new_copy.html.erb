<h2>New copy for <%=@node.fqdn%></h2>
<%= labelled_form_for(:copy, @copy, :url => {:action => 'new_copy'}, :html => { :method => 'post',:class=>'tabular'}) do |f|%>
  <p><%= error_messages_for 'copy' %></p>

  <%= render :partial => 'copy', :locals=>{:f=>f} %>

  <p><%= submit_tag "Save" %></p>
<% end -%>
