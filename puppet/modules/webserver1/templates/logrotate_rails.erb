/var/www/<%=name%>/htdocs/<%=rails_root%>/../log/*.log {
    weekly
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 640 <%=username%> <%=username%>
    sharedscripts
    postrotate
      if [ -d "/var/www/<%=name%>/htdocs/<%=rails_root%>/../tmp" ]; then
        /usr/bin/touch /var/www/<%=name%>/htdocs/<%=rails_root%>/../tmp/restart.txt
      fi
    endscript
}
