/var/log/httpd/*log /var/www/*/logs/*log {
    missingok
    rotate 4
    notifempty
    sharedscripts
    prerotate
        /usr/bin/awstats_updateall.pl now -awstatsprog="/var/www/awstats/awstats.pl" >/dev/null
    endscript
    postrotate
        /sbin/service httpd reload > /dev/null 2>/dev/null || true
    endscript
}

