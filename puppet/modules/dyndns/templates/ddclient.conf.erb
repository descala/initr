protocol=dyndns2
use=cmd, cmd='/usr/bin/dig +short myip.opendns.com @resolver1.opendns.com'
server=<%=URI.parse(@initr_url).hostname%>
login=<%=@fqdn%>
password=<%=@ddns_pass%>
<%=@fqdn%>.<%=@ddns_domain%>
pid=<%= (@operatingsystem == "CentOS") ? "/var/run/ddclient/ddclient.pid" : "/var/run/ddclient.pid" %>
ssl=<%= URI.parse(@initr_url).scheme == 'https' ? 'yes' : 'no' %>
