<%= labelled_form_for :bind_zone, @bind_zone, :url => {:action=>'edit_zone'}, :html=>{:class=>'tabular'} do |f| -%>

  <p><%= error_messages_for 'bind_zone' %></p>

  <% @bind_zone.template_lines.all.each do |line| %>
    <p>
    <%= link_to line, invoice_path(line.invoice) %>
    </p>
  <% end %>

  <%= render :partial => 'bind_zone', :locals => {:f => f} %>

  <%= submit_tag("Save")%><br />
  <%= link_to "Back", :action=>'configure', :id=>@klass %>

<% end -%>
