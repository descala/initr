<h2>Add DNS zone to <%= @node.fqdn %></h2>

<% labelled_tabular_form_for :bind_zone, @bind_zone, :url => {:action=>'add_zone'} do |f| -%>

  <p><%= f.error_messages %></p>

  <%= render :partial => 'bind_zone', :locals => {:f => f} %>

  <%= submit_tag("Add")%><br />
  <%= link_to "Back", :action=>'configure', :id=>@klass %>

<% end -%>
