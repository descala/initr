; masterzone.erb template

$TTL <%= ttl %>
@   IN  SOA <%= scope.lookupvar('bind::nameservers').first %>.  webmaster.<%= name %>. (
            <%= serial %>  ; serial automatically incremented
            300         ; refresh, seconds
            7200        ; retry, seconds
            300         ; expire, seconds
            300 )       ; minimum, seconds
<% scope.lookupvar('bind::nameservers').each do |ns| -%>
    IN  NS  <%= ns %>.
<% end -%>
<%= zone %>
