$TTL 300
@   IN  SOA ns1.<%= domain %>.  webmaster.<%= domain %>. (
            <%= serial %>   ; serial, todays date + todays serial #
            300         ; refresh, seconds
            7200        ; retry, seconds
            300         ; expire, seconds
            300 )       ; minimum, seconds
    IN  NS  ns1.<%= domain %>.
    IN  NS  ns2.<%= domain %>.
    IN  MX  10 mailmx
          IN  A   <%= wwwip %>
www       IN  A   <%= wwwip %>
ftp       IN  A   <%= wwwip %>
mailmx    IN  A   <%= mxip %>
webmail   IN  A   <%= mail_ip %>
mail      IN  A   <%= mail_ip %>
smtp      IN  A   <%= mail_ip %>
