##################
# Puppet managed #
##################
# from template puppet_zones.conf.erb
# this zones are managed by init's bind module
# you can configure them using initr

<% if self.respond_to?(:bind_masterzones) && bind_masterzones -%>
<% bind_masterzones.each_key do |mz| -%>
zone "<%= mz %>" { type master; file "<%=var_dir%>/puppet_zones/<%= mz %>.zone"; };
<% end -%>
<% end -%>
