#
# Highest priority to stable
Package: *
Pin: release n=wheezy
Pin-Priority: 700

Package: *
Pin: release n=jessie
Pin-Priority: 99

<% pfw = scope.lookupvar('::packages_from_jessie')
   pfw = [] unless pfw.is_a?(Array)
   pfw.uniq.each do |package|
-%>
# we want <%=package%> from jessie
Package: <%=package%>
Pin: release n=jessie
Pin-Priority: 700

<% end -%>
