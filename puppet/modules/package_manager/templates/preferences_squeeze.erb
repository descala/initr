#
# Highest priority to stable
Package: *
Pin: release n=squeeze-lts
Pin-Priority: 700

Package: *
Pin: release n=squeeze
Pin-Priority: 700

Package: *
Pin: release n=wheezy
Pin-Priority: 100

<% pfw = scope.lookupvar('::packages_from_wheezy')
   pfw = [] unless pfw.is_a?(Array)
   pfw.uniq.each do |package|
-%>
# we want <%=package%> from wheezy
Package: <%=package%>
Pin: release n=wheezy
Pin-Priority: 700

<% end -%>
