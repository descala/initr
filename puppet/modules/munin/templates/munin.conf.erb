##################
# Puppet managed #
##################

dbdir   /var/lib/munin
htmldir /var/www/html/munin<%= "cgi" if munin_cgi == "1" %>
logdir  /var/log/munin
rundir  /var/run/munin
tmpldir /etc/munin/templates
max_processes 10

<% if munin_cgi == "1" -%>
cgiurl_graph /munin-cgi/munin-cgi-graph
graph_strategy cgi
<% end -%>

# this server ...

[<%= fqdn.downcase %>]
  address 127.0.0.1
  port 4949
  use_node_name yes

# ... and all other munin nodes

<% munin_nodes.each do |node| -%>
<% next if node[0] == fqdn -%>
[<%= node[0].downcase %>]
  address 127.0.0.1
  port <%= node[1] %>
  use_node_name yes
<% end -%>
