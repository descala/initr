# Puppet managed #
##################
<VirtualHost *:80>
  ServerName spam.codifont.net
  DocumentRoot "/var/www/html/dspam"
  SuexecUserGroup dspam dspam
  <Directory /var/www/html/dspam>
    Options +ExecCGI -Indexes
    Addhandler cgi-script .cgi
    DirectoryIndex dspam.cgi
    AuthName "DSPAM LOGIN"
    AuthType Basic
    AuthBasicAuthoritative Off
    AuthMySQLEnable On
    AuthMySQLHost localhost
    AuthMySQLUser <%= db_user %>
    AuthMySQLPassword <%= db_passwd %>
    AuthMySQLDB <%= db_name %>
    AuthMySQLUserTable mailbox
    AuthMySQLNameField username
    AuthMySQLPasswordField password
    AuthMySQLPwEncryption <%= db_passwd_encrypt_httpd %>
    AuthMySQLAuthoritative On
    Require valid-user
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

