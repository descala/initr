hosts = localhost
user = <%= db_user %>
password = <%= db_passwd %>
dbname = <%= db_name %>

query = SELECT maildir FROM mailbox,alias_domain WHERE alias_domain.alias_domain = '%d' and mailbox.username = CONCAT('%u', '@', alias_domain.target_domain) AND mailbox.active = 1 AND alias_domain.active='1'


