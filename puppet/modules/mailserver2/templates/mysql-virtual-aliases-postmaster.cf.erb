# the user name and password to log into the mysql server
hosts = localhost
user = <%= db_user %>
password = <%= db_passwd %>
dbname = <%= db_name %>

query = SELECT '<%= admin_email %>' AS goto FROM domain WHERE domain='%d' AND active = '1' AND '%u' REGEXP '^(MAILER-DAEMON|postmaster|abuse|webmaster)$' LIMIT 1
